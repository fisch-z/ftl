<div class="tw-relative tw-z-50 lg:tw-hidden tw-hidden" role="dialog" aria-modal="true" data-controller="sidebarmobile"
     data-action="sidebarmobilebutton:click@window->sidebarmobile#open">
    <div class="tw-fixed tw-inset-0 tw-bg-gray-900/80 tw-transition-opacity tw-ease-linear tw-duration-300 tw-opacity-0"
         data-sidebarmobile-target="overlay"></div>

    <div class="tw-fixed tw-inset-0 tw-flex">
        <div class="tw-relative tw-mr-16 tw-flex tw-w-full tw-max-w-xs tw-flex-1 tw-transition tw-ease-in-out tw-duration-300 tw-transform -tw-translate-x-full"
             data-sidebarmobile-target="innercontainer">
            <div class="tw-absolute tw-left-full tw-top-0 tw-flex tw-w-16 tw-justify-center tw-pt-5 tw-ease-in-out tw-duration-300 tw-opacity-0"
                 data-sidebarmobile-target="closebutton">
                <button type="button" class="-tw-m-2.5 tw-p-2.5" data-action="click->sidebarmobile#close">
                    <span class="tw-sr-only">Close sidebar</span>
                    <svg class="tw-h-6 tw-w-6 tw-text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <div class="tw-flex tw-grow tw-flex-col tw-gap-y-5 tw-overflow-y-auto tw-bg-white tw-px-6 tw-pb-4">
                {% include "layout/_logo.html.twig" %}
                <nav class="tw-flex tw-flex-1 tw-flex-col">
                    {% include "layout/_sidebarItemList.html.twig" %}
                </nav>
            </div>
        </div>
    </div>
</div>
