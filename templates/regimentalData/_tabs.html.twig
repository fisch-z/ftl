                <a class="{% if item.active %}tw-whitespace-nowrap tw-border-b-2 tw-border-indigo-500 tw-px-1 tw-py-4 tw-text-sm tw-font-medium tw-text-indigo-600{% else %}tw-whitespace-nowrap tw-border-b-2 tw-border-transparent tw-px-1 tw-py-4 tw-text-sm tw-font-medium tw-text-gray-500 hover:tw-border-gray-300 hover:tw-text-gray-700{% endif %}"
                   href="{{ item.url }}">{{ item.title }}</a>
            {% endfor %}
        </nav>
    </div>
